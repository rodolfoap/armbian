#
# How to use this file:
#
# 	1. Fix the ETHERNET_CARD name in this file.
# 	2. Remove the following files:
# 		rm -v /etc/systemd/system/dbus-org.freedesktop.nm-dispatcher.service
#		rm -v /etc/systemd/system/multi-user.target.wants/NetworkManager.service
#	3. Reboot
#

source /etc/network/interfaces.d/*
auto lo
iface lo inet loopback

auto ETHERNET_CARD
allow-hotplug ETHERNET_CARD
iface ETHERNET_CARD inet static
address IP_ADDRESS
netmask IP_MASK
gateway IP_GATEWAY
dns-nameservers IP_DNS

